<script>
    var app = angular.module("app", ["xeditable"]);
    app.run(function(editableOptions, editableThemes) {
        editableOptions.theme = 'default';
        editableThemes['default'].submitTpl = '<button type="submit" id = "savebutton">Save</button>';
        editableThemes['default'].cancelTpl = '<button type="button" ng-click="$form.$cancel()" id = "cancelbutton">Cancel</button>';
    });

    app.controller('ctrl', function($scope){
        $scope.user = {
            description: 'I am a description',
            email: 'abc@def.com',
            phonenumber: '123-214-5234',
            address: 'I am an address\nSecond line'
        };
    });
</script>
